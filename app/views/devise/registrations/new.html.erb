<div class="w-96 bg-white p-4 border border-gray-200 rounded-xl shadow-md">
  <div class="flex flex-col items-center flex-1 py-5">
    <div class="font-satoshiBlack text-xl">Sign Up Now</div>
    <div class="text-base font-normal text-gray-600">Please enter your details below</div>
  </div>


  <div class="flex self-stretch mb-4 justify-center">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "flex flex-col flex-1 self-stretch"}) do |f| %>

      <div class="field mb-4">
        <%= f.email_field :email,
          placeholder: "Type in your email",
          autofocus: true,
          autocomplete: "email",
          class: "w-full py-3 px-5 rounded-lg border-0 bg-gray-200 focus:bg-white focus:border focus:border-black"
        %>
      </div>

      <div class="field mb-4">
        <% password_placeholder = "Password" %>
        <% if @minimum_password_length %>
          <% password_placeholder += " (#{@minimum_password_length} characters minimum)" %>
        <% end %>
        <%= f.password_field :password,
          placeholder: password_placeholder,
          autocomplete: "new-password",
          class: "w-full py-3 px-5 rounded-lg border-0 bg-gray-200 focus:bg-white focus:border focus:border-black"
        %>
      </div>

      <div class="field mb-4">
        <%= f.password_field :password_confirmation,
          placeholder: "Password confirmation",
          autocomplete: "new-password",
          class: "w-full py-3 px-5 rounded-lg border-0 bg-gray-200 focus:bg-white focus:border focus:border-black"
        %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "bg-black text-white w-full rounded-lg p-3 mt-2 hover:cursor-pointer hover:opacity-80 focus:outline-none focus:ring focus:ring-gray-800" %>
      </div>
    <% end %>
  </div>


  <div class="flex self-stretch justify-around">
    <%= render "devise/shared/links" %>
  </div>

</div>
