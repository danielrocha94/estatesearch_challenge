<div class="mt-4 w-1/2 min-w-90">
  <div class="bg-white rounded-lg border border-gray-300 shadow p-3">
    <div class="flex flex-1 items-center">
      <div class="rounded-full w-10 h-10 flex items-center justify-center"
        style="background-color: <%= get_color_from(current_user.email) %>"
      >
        <div class="text-white text-xl font-satoshiMedium">
          <%= current_user.email[0].upcase%>
        </div>
      </div>
      <div class="flex flex-1 flex-col ml-3">
        <div class="font-satoshiMedium">
          <%= post.user.email %>
        </div>
        <div class="font-satoshiThin text-gray-500">
          Student -
          <%= post.created_at.strftime('%b %e, %Y') %>
        </div>
      </div>
      <div>
        Locked
      </div>
    </div>
    <div class="my-2">
      <h2 class="font-satoshiBold text-gray-800 text-xl">
        <%= post.title %>
      </h2>
      <div class="text-gray-500">
        <%= post.body %>
      </div>
    </div>
    <div class="flex">
      <div class="flex px-2 items-center rounded-l-full border border-gray-400 h-8 bg-gray-200">
        <div class="text-gray-600 mr-4">
          Upvote
        </div>
        <div class="text-gray-600">
          34
        </div>
      </div>
      <div class="flex px-2 items-center rounded-r-full border border-gray-400 h-8 bg-gray-200">
        <div class="text-gray-600">
          Downvote
        </div>
      </div>
    </div>
  </div>
</div>
